<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/calc_background"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="12dp"
        android:text="x"
        android:backgroundTint="@color/calc_right_green"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/button12"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="314dp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/calc_main_gray"
        android:text="4"
        android:textSize="29sp"
        app:layout_constraintBottom_toTopOf="@+id/button_1"
        app:layout_constraintEnd_toStartOf="@+id/button10"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/calc_top_gray"
        android:text="+/-"
        android:textSize="29sp"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/calc_main_gray"
        android:text="9"
        android:textSize="29sp"
        app:layout_constraintBottom_toTopOf="@+id/button11"
        app:layout_constraintEnd_toStartOf="@+id/button8"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/calc_main_gray"
        android:text=","
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/button19"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="638dp" />

    <Button
        android:id="@+id/button19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/calc_right_green"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:text="="
        android:textSize="25sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="314dp"
        tools:layout_editor_absoluteY="638dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="@color/calc_right_green"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:text="รท"
        android:textSize="29sp"
        app:layout_constraintBottom_toTopOf="@+id/button8"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="314dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/calc_top_gray"
        android:text="ะก"
        android:textSize="29sp"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button12"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/calc_right_green"
        android:text="-"
        android:textSize="29sp"
        app:layout_constraintBottom_toTopOf="@+id/button_pluse"

        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="314dp" />

    <Button
        android:id="@+id/button_3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/calc_main_gray"
        android:text="3"
        android:textSize="29sp"
        app:layout_constraintBottom_toTopOf="@+id/button18"
        app:layout_constraintEnd_toStartOf="@+id/button_pluse"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button10"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/calc_main_gray"
        android:text="5"
        android:textSize="29sp"
        app:layout_constraintBottom_toTopOf="@+id/button_2"
        app:layout_constraintEnd_toStartOf="@+id/button11"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button11"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/calc_main_gray"
        android:text="6"
        android:textSize="29sp"
        app:layout_constraintBottom_toTopOf="@+id/button_3"
        app:layout_constraintEnd_toStartOf="@+id/button12"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/calc_main_gray"
        android:text="1"
        android:textSize="29sp"
        app:layout_constraintBottom_toTopOf="@+id/button_0"
        app:layout_constraintEnd_toStartOf="@+id/button_2"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="12dp"
