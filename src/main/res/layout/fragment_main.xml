        android:text="8"
        android:textSize="29sp"
        app:layout_constraintBottom_toTopOf="@+id/button10"
        app:layout_constraintEnd_toStartOf="@+id/button7"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_0"
        android:layout_width="192dp"
        android:layout_height="55dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/calc_main_gray"
        android:text="0"
        android:textSize="29sp"
        app:layout_constraintEnd_toStartOf="@+id/button18"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="638dp" />

    <Button
        android:id="@+id/button_pluse"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/calc_right_green"
        android:text="+"
        android:textSize="29sp"
        app:layout_constraintBottom_toTopOf="@+id/button19"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="314dp" />

    <Button
        android:id="@+id/button_2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/calc_main_gray"
        android:text="2"
        android:textSize="29sp"
        app:layout_constraintBottom_toTopOf="@+id/button_0"
        app:layout_constraintEnd_toStartOf="@+id/button_3"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/calc_top_gray"
        android:text="%"
        android:textSize="29sp"
        app:layout_constraintBottom_toTopOf="@+id/button7"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/calc_main_gray"
        android:text="7"
        android:textSize="29sp"
        app:layout_constraintBottom_toTopOf="@+id/button9"
        app:layout_constraintEnd_toStartOf="@+id/button6"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/main_text"
        android:layout_width="398dp"
        android:layout_height="97dp"
        android:layout_marginBottom="12dp"
        android:textColor="@color/calc_text"
        android:text=""
        android:textSize="58sp"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        android:gravity="end"
        tools:layout_editor_absoluteX="10dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/top_text"
        android:layout_width="152dp"
        android:layout_height="40dp"
        android:layout_marginBottom="12dp"
        android:gravity="end"
        android:text=""
        android:textColor="@color/calc_main_gray"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/main_text"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="256dp" />

</androidx.constraintlayout.widget.ConstraintLayout>