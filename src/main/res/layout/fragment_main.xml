<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/calc_background"
    android:layout_height="match_parent"
    tools:ignore="MissingClass">

    <TextView
        android:id="@+id/main_text"
        android:layout_width="398dp"
        android:layout_height="97dp"
        android:gravity="end"
        android:text=""
        android:textColor="@color/calc_text"
        android:textSize="58sp"
        android:singleLine="true"
        android:ellipsize="start"
        app:layout_constraintBottom_toTopOf="@+id/keyboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/top_text"
        android:layout_width="152dp"
        android:layout_height="40dp"
        android:gravity="end"
        android:text=""
        android:textColor="@color/calc_main_gray"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/main_text"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/keyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:orientation="horizontal"
        app:columnCount="4"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/buttonAC"
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/calc_top_gray"
            android:text="@string/button_ac"
            android:textSize="29sp"
            app:layout_column="0" />

        <Button
            android:id="@+id/buttonInv"
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/calc_top_gray"
            android:text="@string/button_inv"
            android:textSize="29sp"
            app:layout_column="1" />

        <Button
            android:id="@+id/buttonPercent"
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/calc_top_gray"
            android:text="@string/button_procent"
            android:textSize="29sp"
            app:layout_column="2" />

        <Button
            android:id="@+id/buttonDiv"
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:backgroundTint="@color/calc_right_green"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:text="@string/button_div"
            android:textSize="29sp"
            app:layout_column="3" />


        <Button
            android:id="@+id/button_7"
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/calc_main_gray"
            android:text="@string/button_7"
            android:textSize="29sp"
            app:layout_column="0" />

        <Button
            android:id="@+id/button_8"
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/calc_main_gray"
            android:text="@string/button_8"
            android:textSize="29sp"
            app:layout_column="1" />

        <Button
            android:id="@+id/button_9"
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/calc_main_gray"
            android:text="@string/button_9"
            android:textSize="29sp"
            app:layout_column="2" />

        <Button
            android:id="@+id/buttonMul"
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:layout_marginBottom="12dp"
            android:text="@string/button_mul"
            android:backgroundTint="@color/calc_right_green"
            android:textSize="35sp"
            app:layout_column="3" />

        <Button
            android:id="@+id/button_4"
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/calc_main_gray"
            android:text="@string/button_4"
            android:textSize="29sp"
            app:layout_column="0" />

        <Button
            android:id="@+id/button_5"
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/calc_main_gray"
            android:text="@string/button_5"
            android:textSize="29sp"
            app:layout_column="1" />

        <Button
            android:id="@+id/button_6"
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/calc_main_gray"
            android:text="@string/button_6"
            android:textSize="29sp"
            app:layout_column="2" />

        <Button
            android:id="@+id/button12"
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/calc_right_green"
            android:text="@string/button_minus"
            android:textSize="29sp"
            app:layout_column="3" />

        <Button
            android:id="@+id/button_1"
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/calc_main_gray"
            android:text="@string/button_1"
            android:textSize="29sp"
            app:layout_column="0" />

        <Button
            android:id="@+id/button_2"
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/calc_main_gray"
            android:text="@string/button_2"
            android:textSize="29sp"
            app:layout_column="1" />

        <Button
            android:id="@+id/button_3"
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/calc_main_gray"
            android:text="@string/button_3"
            android:textSize="29sp"
            app:layout_column="2" />

        <Button
            android:id="@+id/button_pluse"
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/calc_right_green"
            android:text="@string/button_plus"
            android:textSize="29sp"
            app:layout_column="3" />

        <Button
            android:id="@+id/button_0"
            android:layout_width="192dp"
            android:layout_height="55dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/calc_main_gray"
            android:text="@string/button_0"
            android:textSize="29sp"
            app:layout_column="0"
            app:layout_columnSpan="2" />

        <Button
            android:id="@+id/buttonDot"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/calc_main_gray"
            android:text="@string/button_dot"
            android:textSize="25sp"
            app:layout_column="2" />

        <Button
            android:id="@+id/buttonEnd"
            android:backgroundTint="@color/calc_right_green"
            android:text="@string/button_final"
            android:textSize="25sp"
            app:layout_column="3" />

    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>